<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".List_Line">

    <TextView
        android:id="@+id/listline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="Choose Line Production"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/listline"
        android:id="@+id/button_mainassy"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/main_assy"
        android:textSize="20sp"/>

    <Button
        android:layout_below="@+id/button_mainassy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/button_cover"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="S/A Cover"
        android:textSize="20dp"/>

    <Button
        android:layout_below="@+id/button_cover"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/button_holder"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="S/A Holder"
        android:textSize="20dp"/>

    <Button
        android:layout_below="@+id/button_holder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/button_stator"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="S/A Stator"
        android:textSize="20dp"/>


</RelativeLayout>